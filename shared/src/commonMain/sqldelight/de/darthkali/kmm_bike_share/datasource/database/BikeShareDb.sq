-- -----------------------------------------------------
-- Table
-- -----------------------------------------------------
CREATE TABLE bike_share_Entity(
   id                   INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
   bssid                TEXT    NOT NULL,
   brand                TEXT,
   city                 TEXT,
   country              TEXT,
   site                 TEXT,
   electric             TEXT,
   currently_active     TEXT
);

-- -----------------------------------------------------
-- CRUD
-- -----------------------------------------------------

-- -----------------------------------------------------
-- INSERT
-- -----------------------------------------------------
insertBikeShare:
INSERT INTO bike_share_Entity(bssid,brand,city,country,site, electric, currently_active)
SELECT ?, ?, ?, ?, ?, ?, ?;


-- -----------------------------------------------------
-- READ
-- -----------------------------------------------------
getAllBikeShares:
SELECT * FROM bike_share_Entity;

getBikeShareById:
SELECT * FROM bike_share_Entity
WHERE id = :id;


getBikeShareByBssid:
SELECT * FROM bike_share_Entity
WHERE bssid = :bssid;


getLastInsertRowId:
SELECT last_insert_rowid();


-- -----------------------------------------------------
-- UPDATE
-- -----------------------------------------------------
updateBikeShare:
UPDATE bike_share_Entity
SET bssid = ?,brand = ?,city = ?,country = ?,site = ?, electric = ?, currently_active = ?
WHERE bssid = ?;


-- -----------------------------------------------------
-- DELETE
-- -----------------------------------------------------
deleteBikeShareById:
DELETE FROM bike_share_Entity WHERE id = ?;

deleteAllBikeShares:
DELETE FROM bike_share_Entity;